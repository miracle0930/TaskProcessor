<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="56dp">

        <TextView
            android:id="@+id/taskCellName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/taskCellStatus"
            android:layout_alignBottom="@+id/taskCellStatus"
            android:layout_alignParentStart="true"
            android:layout_marginStart="6dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/taskCellCancel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="@android:color/holo_red_light"
            android:text="Cancel"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/taskCellStatus"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:layout_toEndOf="@+id/taskCellName"
            android:text="TextView"
            android:textAlignment="textStart" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>